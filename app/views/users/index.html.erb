<% @page_title ="会員一覧" %>

<h1><%= @page_title %></h1>

<%= form_tag :search_users, method: :get do %>
	<p><%= text_field_tag "q", params[:q] %></p>
	<p><%= submit_tag "検索" %></p>
<% end %>
<p><%= link_to "会員の新規登録", :new_user %></p>
<% if @users.present? %>
<table>
  <tr>
    <th>氏名</th>
    <th>職業</th>
    <th>会員区分</th>
    <th>Image</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%#= link_to user.name, user %></td>
    <td><%#= user.job %></td>
    <td><%#= user.role %></td>
    <td><%#= image_tag user.image_url %></td>
    <td>
      <%= link_to "編集",  [:edit, user] %> |
      <%= link_to "削除", user, method: :delete,
            data: { confirm: "本当に削除しますか?" } %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<p>会員情報がありません。</p>
<% end %>
